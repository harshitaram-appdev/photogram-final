<%= notice%>

<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>
<%if session[:user_id] != nil %>
<div>
  <div>
    <h2>
      Add a new photo
    </h2>

   <form action="/insert_photo" method="post" enctype="multipart/form-data">
  <label for="browser_input">Image</label>
  <input id="browser_input" type="file" name="query_image" placeholder="Enter a URL for the image...">

  <label for="browser_caption">Caption</label>
  <textarea id="browser_caption" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

  <button>Add photo</button>
</form>
  </div>
</div>
<%end%>
<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caption
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Comments count
        </th>

        <th>
          Likes count
        </th>

        <th>
          Posted at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>

      <% if User.where({ :id => a_photo.owner_id}).at(0).private == false %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <img src="<%= a_photo.image %>" class="img-responsive">
        </td>

        <td>
          <%= a_photo.owner_username.username %>
        </td>

        <td>
          <%= a_photo.comments.count %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
